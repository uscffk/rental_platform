<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ffk.dao.IManufacturer">

     <select id="queryManufacturer" resultType="manufacturer" parameterType="map">
         select id, name, phone, username, pwd, contractAddress from manufacturers
         <where>
             <if test="id!=null">
                 id = #{id}
             </if>
             <if test="name!=null">
                 AND name = #{name}
             </if>
             <if test="username!=null">
                 AND username = #{username}
             </if>
             <if test="contractAddress!=null">
                 AND contractAddress = #{contractAddress}
             </if>
         </where>
     </select>

    <select id="getTotal" resultType="java.lang.Integer">
        select count(*) from manufacturers
    </select>

    <select id="queryManufacturerById" resultType="manufacturer">
        select * from manufacturers where id = #{manufacturerId}
    </select>

    <update id="updateManufacturer" parameterType="manufacturer">
        update manufacturers
        <set>
            <if test="phone!=null">
                phone = #{phone}
            </if>
            <if test="username!=null">
                username = #{username}
            </if>
            <if test="pwd!=null">
                pwd = #{pwd}
            </if>
        </set>
    </update>

    <insert id="addManufacturer" parameterType="manufacturer">
        insert into manufacturers(id,name,username,phone,pwd,contractAddress)
        VALUES (null,#{name},#{username},#{phone},#{pwd},#{contractAddress})
    </insert>

    <select id="queryLogin" resultType="manufacturer">
         select * from manufacturers
         where username = #{username}
    </select>


</mapper>