<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ffk.dao.IUserLike">

    <insert id="addUserLike" parameterType="userLike">
        insert into `like`(id, comId, userId) VALUES (#{id},#{comId},#{userId})
    </insert>

    <insert id="deleteUserLike">
        delete from `like` where id = #{id}
    </insert>


    <select id="queryUserLike" resultType="userLike">
        select * from `like` where userId = #{userId}
    </select>

</mapper>
