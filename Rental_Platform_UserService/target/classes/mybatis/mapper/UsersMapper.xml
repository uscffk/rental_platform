<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ffk.dao.IUser">

    <select id="login" resultType="users">
        select * from users where username = #{username}
    </select>

    <select id="queryById" resultType="users">
        select * from users where id = #{id}
    </select>

    <select id="queryByAddress" resultType="users" parameterType="String">
        select * from users where contractAddress = #{address}
    </select>

    <select id="queryUsers" parameterType="map" resultType="users">
        select *
        from users
        <where>
            <if test="id!=null">
                id = #{id}
            </if>
            <if test="username!=null">
                AND username = #{username}
            </if>
            <if test="province!=null">
                AND province = #{province}
            </if>
            <if test="city!=null">
                AND city = #{city}
            </if>
            <if test="realName!=null">
                AND realName = #{realName}
            </if>
            <if test="phone!=null">
                AND phone = #{phone}
            </if>
            <if test="rentQualification!=null">
                AND rentQualification = #{rentQualification}
            </if>
            <if test="sex!=null">
                AND sex = #{sex}
            </if>
        </where>
    </select>

    <insert id="addUser" parameterType="users">
        insert into users(username, id, userhead, identity, realName,
                          email, phone, password, contractAddress,
                          rentQualification, sex, province, city)
                          VALUES (#{username},null,'default.jpg',#{identity},
                                  #{realName},#{email},#{phone},#{password},#{contractAddress},
                                  1,1,#{province},#{city})
    </insert>

    <update id="updateUser" parameterType="users">
        update users
        <set>
            <if test="username!=null">
                username = #{username},
            </if>
            <if test="userhead!=null">
                userhead = #{userhead},
            </if>
            <if test="identity!=null">
                identity = #{identity},
            </if>
            <if test="realName!=null">
                realName = #{realName},
            </if>
            <if test="phone!=null">
                phone = #{phone},
            </if>
            <if test="email!=null">
                email = #{email},
            </if>
            <if test="password!=null">
                `password` = #{password},
            </if>
            <if test="rentQualification!=null">
                rentQualification = #{rentQualification},
            </if>
            <if test="sex!=null">
                sex = #{sex},
            </if>
            <if test="province!=null">
                province = #{province},
            </if>
            <if test="city!=null">
                city = #{city}
            </if>
        </set>

        where id = #{id}
    </update>



    <select id="queryTotal" resultType="java.lang.Integer">
        select count(*) from users;
    </select>

</mapper>
