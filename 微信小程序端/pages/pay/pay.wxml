<!--pages/pay/pay.wxml-->
 <!-- 支付页内容 -->
 <view class="cart_content">
    <view class="cart_title" style="text-align:center">订单信息</view>
    <view class="cart_main">
      <view class="cart_item" >
            <!-- 商品图片 -->
            <navigator class="cart_img_wrap">
            <image mode="widthFix"  wx:if="{{commodity.picture}}" src="{{imagePrefix}}commodityService/upload/imgs/{{commodity.picture}}" ></image>
            </navigator>
            <!-- 商品信息 -->
            <view class="cart_info_wrap">
              <view class="goods_name">{{commodity.name}}</view>
              <view class="font" wx:if="{{commodity.rentForSale==1}}">请在下方选择分期期数</view>
              <view class="goods_price_wrap" wx:if="{{commodity.rentForSale==1}}">
                <view class="goods_price">￥{{commodity.rentPrice==0?commodity.sellPrice/(num):commodity.rentPrice}}{{commodity.billMethod==0?'/小时':commodity.billMethod==1?'/天':"/月"}}</view>
                <view class="cart_num_tool">
                  <view bindtap="handleItemNumEditDecrease"  data-operation="{{-1}}" class="num_edit">-</view>
                <view class="goods_num">{{num}}</view>
                <view bindtap="handleItemNumEditIncrease"  data-operation="{{1}}"  class="num_edit">+</view>
              </view>
                </view>
              </view>
            
          </view>
    </view>
  </view>
  <!-- 订单信息 -->
  <view class="msg_list">
    <view class="msg_item">
        <view>订单类型</view>
        <view>{{commodity.sharingRent==1?'共享租赁订单':commodity.rentBeforeBuy==1?'先租后买订单':'以租代售订单'}}</view>
    </view>
<!-- 最大期数 -->
    <view class="msg_item" wx:if="{{commodity.rentForSale==1}}">
        <view>最大期数</view>
        <view>{{commodity.timeNumber}}</view>
    </view>
    <!-- 商品总价 -->
    <view class="msg_item" wx:if="{{commodity.rentForSale==1||commodity.rentBeforeBuy==1}}">
        <view>商品总价</view>
        <view>￥{{commodity.sellPrice}}</view>
    </view>

    <view class="msg_item">
        <view>商家</view>
        <view>{{commodity.manufacturers.name}}</view>
    </view>

    <view class="msg_item">
        <view>NFT ID</view>
        <view>{{nftId}}</view>
    </view>

    <view class="msg_item" wx:if="{{commodity.sharingRent==1||commodity.rentBeforeBuy==1}}">
        <view>单期租赁价格</view>
        <view>￥{{commodity.rentPrice}}</view>
    </view>

    <view class="msg_item">
        <view>计费方式</view>
        <view>{{commodity.billMethod==0?'按小时':commodity.billMethod==1?'按天':'按月'}}</view>
    </view>

    <view class="msg_item">
        <view>所需押金</view>
        <!-- 需要判断是否为免押用户 -->
        <view>￥{{commodity.deposit}}</view>
    </view>

</view>

  <!-- 底部工具栏 -->
  <view class="footer_tool">
    <!-- 总价格 -->
    <view class="total_price_wrap" wx:if="{{commodity.rentForSale==1}}">
      <view class="total_price">
        合计: <text class="total_price_text">￥{{commodity.sellPrice}}</text>
      </view>
      <view  class="font">若实际使用时间超过下单时间则将额外收费</view>
    </view>
    <view class="order_pay_wrap" bindtap="handleOrderPay"  >
      结算
    </view>
  </view>

